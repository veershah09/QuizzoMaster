@model QuizApplicationMVC.Models.Users

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>Users</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <div class="mt-3">
                <a asp-controller="Quiz" asp-action="MyQuizes" class="btn btn-primary">My Quizzes</a>
                <span class="mx-2"></span> 
                <a asp-controller="Users" asp-action="QuizHistory" class="btn btn-primary">History</a>
                <span class="mx-2"></span> 
                <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <span class="mx-2"></span> 
                <form asp-controller="Users" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
